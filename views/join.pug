extends layouts/main.pug

block content
    .form__container
        form(action=routes.join method="post")
            input(type="text" name="name" placeholder="Full Name" required=true)
            input(type="text" name="email" placeholder="Email" required=true)
            input(type="text" name="password1" placeholder="Password" required=true)
            input(type="text" name="password2" placeholder="Verify Password" required=true)
            input(type="submit" value="Join Now")
        include partials/socialLogin
        